<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keylogger Pre-Installer"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnEnableAccessibility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Accessibility" />

    <Button
        android:id="@+id/btnEnableAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Device Admin" />

    <Button
        android:id="@+id/btnInstallKeylogger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Install Keylogger" />

</LinearLayout>
